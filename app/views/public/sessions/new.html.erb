<div class="container">
  <div class="row mb-3">
    <span>　　　　　　　　　　</span><h5>ログイン</h5>
  </div>

  <div class="row mb-2">
    <span>　　　　　　　　　　　</span><h5>会員の方はこちらからログイン</h5>
  </div>

  <%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="row mb-5">
    <div class="col d-flex justify-content-end">
      <div class="field">
        <p><%= f.label :メールアドレス %></p>
        <p><%= f.label :パスワード %></p>
      </div>
    </div>

    <div class="col-7">
      <div class="field">
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
        <p><%= f.password_field :password, autocomplete: "current-password" %></p>
      </div>

      <!--<%# if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%#= f.check_box :remember_me %>-->
      <!--    <%#= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<%# end %>-->

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row mb-2">
    <span>　　　　　　　　　　　</span><h5>会員登録がお済みでない方</h5>
  </div>

  <div class="row">
    <span>　　　　　　　　　　　　　　　　　　</span><%= render "public/shared/links" %><span>　から新規登録を行なってください。</span>
  </div>

</div>
