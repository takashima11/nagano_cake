<div class="container">
  <div class="row">
    <h5>ショッピングカート</h5>
    <div class="col d-flex justify-content-end">
      <%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items),method: :delete,data: {confirm: '本当に消しますか？'}, class: "btn btn-danger" %>
    </div>
  </div><br />

  <div class="row">
    <table class="table table-bordered">
      <thead class="table-active">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>

      <tbody>
      <% @cart_items_customer.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.get_image(50,50) %><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
              <%= f.select :amount, options_for_select( *[1..10], {selected: cart_item.amount.to_i} )  %>
              <% f.hidden_field :item_id, { value: cart_item.item_id }%>
              <%= f.submit '変更', class: "btn btn-success btn-sm" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td>

              <%= link_to "削除する", cart_item_path(cart_item),method: :delete,data: {confirm: '本当に消しますか？'}, class: "btn btn-danger" %>

          </td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col-8">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">合計金額</th>
            <% @total = 0 %>
            <% @cart_items_customer.each do |cart_item| %>
              <% @total += cart_item.subtotal %>
            <% end %>
            <td><%= @total %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <% if @cart_items.present? %>
  <div class="row d-flex justify-content-center">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  </div>
  <% end %>
</div>
