

<div class="container">
  <h5 class="mt-3 pb-3 ml-5 pl-5">マイページ</h5>
  <div class="row">

      <p>登録情報</p>
      <p class="ml-3">
        <%= link_to "編集する",current_customer_information_edit_path, class: "btn btn-success btn-sm" %>
      </p>

  </div>

  <div class="row">
  <div class="col-6 pl-0">
    <table class="table table-bordered">
      <tbody>

          <tr>
            <th><%= "氏名" %></th>
            <th><%= @customer.last_name %> <%= @customer.first_name %></th>
          </tr>
          <tr>
            <th><%= "カナ" %></th>
            <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
          </tr>
          <tr>
            <th><%= "郵便番号" %></th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th><%= "住所" %></th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th><%= "電話番号" %></th>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <th><%= "メールアドレス" %></th>
            <th><%= @customer.email %></th>
          </tr>

      </tbody>
    </table>
    </div>
  </div>

  <div class="row mt-5">

      <p>注文履歴</p>
      <p class="ml-3">
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm" %>
      </p>

  </div>

</div>