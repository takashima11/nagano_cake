<div class="container">
  <div class="row">
    <h5>注文情報確認</h5>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead class="table-secondary">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </thead>

        <tbody>
          <%  @sum = 0 %>

          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.get_image(50,50) %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <% @sum += cart_item.subtotal %>
            <td><%= cart_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
      <table class="table table-bordered">
        <tbody>

          <tr>
            <th class="table-active">送料</th>
            <% shipping_cost = 800 %>
            <td><%= shipping_cost %></td>
          </tr>
          <tr>
            <th class="table-active">商品合計</th>
            <td><%= @sum %></td>
          </tr>
          <tr>
            <th class="table-active">請求金額</th>
            <td><%= @sum + 800 %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>支払方法</p>

      <p>お届け先</p>
    </div>
    <div class="col-11">
      <p><%= @order.payment_method_i18n %></p>
      <p><%= @order.shipping_address %><br />
      <%= @order.shipping_name %></p>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @order, url: orders_path do |f| %>

      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <%= f.hidden_field :shipping_name, value: @order.shipping_name %>
      <%= f.hidden_field :shipping_postal_code, value: @order.shipping_postal_code %>
      <%= f.hidden_field :shipping_address, value: @order.shipping_address %>
      <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= f.hidden_field :billing_amount, value: @sum + 800 %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>



