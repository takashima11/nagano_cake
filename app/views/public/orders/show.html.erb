<div class="container">
  <div class="row">
    <h5 class="ml-5 pb-4 pl-5">注文履歴詳細</h5>
  </div>

  <div class="row">
    <div class="col-6">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">注文日</th>
            <td><%= @order.updated_at.strftime( "%Y/%m/%d" ) %></td>
          </tr>
          <tr>
            <th class="table-active">配送先</th>
            <td><%= @order.shipping_postal_code %><br /><%= @order.shipping_address %><br /><%= @order.shipping_name %></td>
          </tr>
          <tr>
            <th class="table-active">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-5">
      <p>請求情報</p>
      <table class="table table-bordered">
        <tbody>
          <%  @sum = 0 %>

          <tr>
            <th class="table-active">商品合計</th>
            <% @order.order_details.each do |order_detail| %>
            <% @sum += order_detail.subtotal %>
            <% end %>
            <td>
              <%= @sum %>
              <%#= @order.order_details.sum(:subtotal) %>
            </td>
          </tr>

          <tr>
            <th class="table-active">配送料</th>
            <td><%= 800.to_s(:delemited) %></td>
          </tr>
          <tr>
            <th class="table-active">ご請求額</th>
            <td><%= @order.billing_amount.to_s(:delimited) %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <p>注文内容</p>
      <table class="table table-bordered">
        <thead class="table-active">
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </thead>

        <tbody>
          <%  @sum = 0 %>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.quantity %></td>
            <% @sum += order_detail.subtotal %>
            <td><%= order_detail.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

