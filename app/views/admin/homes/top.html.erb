<div class="container">
  <div class="row">
    <h5>注文履歴一覧</h5>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.updated_at.strftime( "%Y/-m/%-d %T" ) %></td>
          <td><%= order.shipping_name %></td>
          <td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

