<div class="container">
  <div class="row">
    <h1>商品新規登録</h1>
  </div>

  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="row">
      <h5>商品画像</h5>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="row">
      <h5>商品名</h5>
      <%= f.text_field :name %>
    </div>
    <div class="row">
      <h5>商品説明</h5>
      <%= f.text_area :introduction %>
    </div>
    <div class="row">
      <h5>税抜価格</h5>
      <%= f.text_field :price %>
    </div>
    <div class="row">
      <h5>販売ステータス</h5>
    </div>
    
    <div class="row">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  <% end %>
  
</div>

