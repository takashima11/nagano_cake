<div class="container">
  <div class="row">
    <h1>商品一覧</h1>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <!--<th>ジャンル</th>-->
          <!--<th>ステータス</th>-->
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <th><%= link_to item.name, admin_item_path(item) %></th>
            <th><%= item.price %></th>
            <th></th>
            <th></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @items %>
</div>

