<div class="container">
  <div class="row">
    <h1>商品詳細</h1>
  </div>

  <div class="row">
    <div class="col">
      <%= image_tag @items.get_image %>
    </div>
    <div class="col">
      <div class="d-flex flex-row">
        <p>商品名</p>
        <%= @items.name %>
      </div>
      <div class="d-flex flex-row">
        <p>商品説明</p>
        <%= @items.introduction %>
      </div>
      <div class="d-flex flex-row">
        <p>ジャンル</p>

      </div>
      <div class="d-flex flex-row">
        <p>税込価格<br>
           (税抜価格)</p>
      </div>
      <div class="d-flex flex-row">
        <p>販売ステータス</p>

      </div>

      <%= link_to "編集する", edit_admin_item_path(@items), class: "btn btn-success" %>
    </div>
  </div>
</div>

