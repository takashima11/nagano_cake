<div class="container">
  <div class="row mb-4">
    <span>　　　　　　　　　　</span><h5>商品編集</h5>
  </div>

  <div class="row d-flex justify-content-center">
    <%= form_with model: @items, url: admin_item_path do |f| %>
      <div class="row">
        <div class="col-4">
          <p>商品画像</p>
        </div>
        <div class="col-8">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>商品名</p>
        </div>
        <div class="col-8">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>商品説明</p>
        </div>
        <div class="col-8">
          <%= f.text_area :introduction %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>ジャンル</p>
        </div>
        <div class="col-8">

        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>税抜価格</p>
        </div>
        <div class="col-8">
          <%= f.text_field :price %><%= "円" %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>販売ステータス</p>
        </div>
        <div class="col-8">
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
