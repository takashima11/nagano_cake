<div class="container">
  <div class="row mb-4">
    <span>　　　　　　　</span><h5>管理者ログイン</h5>
  </div>



  <%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="row">
    <div class="col d-flex justify-content-end">
      <div class="field">
        <p><%= f.label :メールアドレス %></p>
        <p><%= f.label :パスワード %></p>
      </div>
    </div>

    <div class="col-7">
      <div class="field">
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
        <p><%= f.password_field :password, autocomplete: "current-password" %></p>
      </div>

      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>

      <!--<%= render "admin/shared/links" %>-->
    </div>
  </div>
  <% end %>

</div>
