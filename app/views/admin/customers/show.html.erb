<div class="container">
  <div class="row">
    <h5><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h5>
  </div>

  <div class="row">
    <div class="col d-flex flex-column bd-highlight mb-3">
      <p>会員ID</p>
      <p>氏名</p>
      <p>フリガナ</p>
      <p>郵便番号</p>
      <p>住所</p>
      <p>電話番号</p>
      <p>メールアドレス</p>
      <p>会員ステータス</p>
    </div>
    <div class="col">
      <p><%= @customer.id %></P>
      <p><%= @customer.last_name + @customer.first_name %></p>
      <p><%= @customer.last_name_kana + @customer.first_name_kana %></p>
      <p><%= @customer.postal_code %></p>
      <p><%= @customer.address %></p>
      <p><%= @customer.telephone_number %></p>
      <p><%= @customer.email %></p>
      <% if @customer.is_deleted == false %>
        <p class="text-success">有効</p>
      <% else %>
        <p class="text-muted">退会</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-sm btn-success" %>
    </div>
    <div class="col">
      <p class="text-primary">注文履歴一覧を見る</p>
    </div>
  </div>
</div>

